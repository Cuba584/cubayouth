        <% } %>
      </div>
      <div class="byline-item">
      <p class="byline-head">photos by</p>
        <% for (v in body["videographers"]) {%>
        <p><%= body["videographers"][v]["name"] %></p>
        <% } %>
      </div>
      <div class="byline-item">
      <p class="byline-head">design by</p>
