<script>
$(document).ready(function(){
	$('iframe').each(function(i, el){
		$(el).attr('src', $(el).data("src"));
	});
});
</script>

<div class="container inner">

  <section id="top-fold">
				<div id="cinema-box">
        <video id="cinemagraph" data-autoplay autoplay muted playsinline onended="showReplay()">

          <source src="/assets/video/<%=body["cinemagraph"]["src"] %>" type="video/mp4">
          <!-- <source src="/assets/video/dorian_new.mp4" type="video/mp4"> -->
        </video>
      <div class="replay-btn" id="replay-btn" onclick="replayVideo()">
